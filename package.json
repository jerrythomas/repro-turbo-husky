{
  "name": "my-turborepo",
  "description": "A barebones Turborepo example for working with Task Graphs.",
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "prepare": "husky",
    "release": "turbo run release",
    "release:patch": "turbo run release:patch",
    "release:minor": "turbo run release:minor",
    "release:major": "turbo run release:major"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "turbo": "latest"
  }
}
